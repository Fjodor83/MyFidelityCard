@page "/"
@using FidelityCard.Lib.Models
@using System.Text.Json

@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Registrazione - Suns</PageTitle>

<div class="min-vh-100 d-flex align-items-center welcome-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                
                <!-- Main Registration Card -->
                <div class="card border-0 shadow-lg welcome-card">
                    <div class="card-body p-5 text-center">
                        
                        <!-- Branding -->
                        <div class="mb-4 logo-container">
                            <img src="images/Suns.webp" alt="SUNS Logo" class="logo-img-welcome" />
                            <p class="text-muted mb-0">Zero & Company</p>
                        </div>

                        <!-- Welcome Message -->
                        <h3 class="mb-3 fw-bold text-dark">Benvenuto! 👋</h3>
                        <p class="text-muted mb-4 lh-lg">
                            Registrati al nostro <strong>programma fedeltà</strong> inserendo la tua email.<br/>
                            Riceverai un link per completare la registrazione e ottenere la tua Suns Fidelity Card!
                        </p>

                        <!-- Registration Form -->
                        <div class="mb-4">
                            <input @bind="emailRegistrazione" 
                                   @bind:event="oninput"
                                   type="email"
                                   class="form-control form-control-lg text-center" 
                                   placeholder="La tua email..."
                                   @onkeypress="@(async e => { if (e.Key == "Enter") await InviaRegistrazione(); })" />
                            <small class="text-muted">
                                Es: tuaemail@example.com
                            </small>
                        </div>

                        @if (!string.IsNullOrEmpty(messaggioRegistrazione))
                        {
                            <div class="alert @(registrazioneSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show">
                                <i class="bi bi-@(registrazioneSuccess ? "check-circle" : "exclamation-triangle")"></i>
                                @messaggioRegistrazione
                                <button type="button" class="btn-close" @onclick="@(() => messaggioRegistrazione = "")"></button>
                            </div>
                        }

                        <button class="btn btn-custom-welcome btn-lg w-100 mb-3" @onclick="InviaRegistrazione" disabled="@isInvio">
                            @if (isInvio)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="bi bi-envelope me-2"></i>Ricevi Link di Registrazione
                        </button>

                        <!-- Benefits -->
                        <div class="benefits-section">
                            <h5 class="mb-3">✨ Vantaggi della Card</h5>
                            <div class="row text-start">
                                <div class="col-6">
                                    <ul class="list-unstyled small">
                                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Punti ad ogni acquisto</li>
                                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Sconti esclusivi</li>
                                    </ul>
                                </div>
                                <div class="col-6">
                                    <ul class="list-unstyled small">
                                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Premi fedeltà</li>
                                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Promozioni speciali</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Store Info Footer -->
                <div class="text-center mt-4">
                    <p class="text-white small mb-3">
                        @if (!string.IsNullOrEmpty(puntoVenditaNome))
                        {
                            <span><i class="bi bi-geo-alt-fill me-1"></i>@puntoVenditaNome (@puntoVenditaCodice)</span>
                        }
                    </p>
                    <div class="d-flex gap-2 justify-content-center">
                        <button class="btn btn-sm btn-outline-light" @onclick="Logout">
                            <i class="bi bi-box-arrow-right me-1"></i>Esci (Operatore)
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@code {
    [SupplyParameterFromQuery(Name = "store")] public string Store { get; set; } = "NE001";
    
    private string emailRegistrazione = "";
    private string messaggioRegistrazione = "";
    private bool registrazioneSuccess = false;
    private bool isInvio = false;
    private string puntoVenditaNome = "";
    private string puntoVenditaCodice = "";

    public static CustomSettings? CustomSettings { get; set; } = null;

    protected override async Task OnInitializedAsync()
    {
        puntoVenditaCodice = Store;
        puntoVenditaNome = "Punto Vendita"; 
        await base.OnInitializedAsync();
    }

    protected override async Task OnAfterRenderAsync(bool first)
    {
        if (first)
        {
             try 
             {
                var manifestData = await JS.InvokeAsync<Dictionary<string, JsonElement>>("manifestInterop.getManifest");
                if (manifestData != null && manifestData.ContainsKey("custom_settings")) 
                {
                    CustomSettings = JsonSerializer.Deserialize<CustomSettings>(manifestData["custom_settings"]);
                }
             }
             catch (Exception)
             {
                 // Ignore if manifest fails locally
             }
        }
    }

    private async Task InviaRegistrazione()
    {
        if (string.IsNullOrWhiteSpace(emailRegistrazione))
        {
            messaggioRegistrazione = "Inserisci un'email valida.";
            registrazioneSuccess = false;
            return;
        }

        isInvio = true;
        messaggioRegistrazione = "";
        StateHasChanged();
        
        try
        {
             var endpoint = CustomSettings?.Endpoint ?? "";

             // Rimuovo il check preventivo, fa tutto EmailValidation ora
             var validationUrl = $"{endpoint}/api/FidelityCard/EmailValidation?email={emailRegistrazione}&store={Store}";
             var response = await Http.GetAsync(validationUrl);
             
             if (response.IsSuccessStatusCode)
             {
                 var result = await response.Content.ReadFromJsonAsync<JsonElement>();
                 bool userExists = false;
                 
                 try 
                 {
                    userExists = result.GetProperty("userExists").GetBoolean();
                 } 
                 catch {}

                 if (userExists)
                 {
                     messaggioRegistrazione = "Questa mail è già registrata. Per favore controlla la tua mail per entrare nel tuo profilo utente.";
                     registrazioneSuccess = true; // È comunque un successo (email inviata) o false? Utente vuole feedback positivo ma messaggio specifico. Mettiamo warning style maybe? Ma user dice "feedback". 
                     // Lascio success = true così è verde (o posso metterlo false per rosso, ma verde è meglio per confermare invio mail).
                     // Utente ha detto "impedisce la mail invece di dare feedback". Quindi ora mail parte.
                 }
                 else
                 {
                     messaggioRegistrazione = "Link di registrazione inviato! Controlla la tua email.";
                     registrazioneSuccess = true;
                 }
                 
                 emailRegistrazione = ""; 
             }
             else 
             {
                 messaggioRegistrazione = "Errore durante la richiesta. Riprova più tardi.";
                 registrazioneSuccess = false;
             }
        }
        catch (Exception)
        {
            messaggioRegistrazione = "Errore di connessione o servizio non disponibile.";
            registrazioneSuccess = false;
        }
        finally
        {
            isInvio = false;
        }
    }

    private void Logout()
    {
        Navigation.NavigateTo("/", true);
    }
}